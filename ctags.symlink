# Basic options
--recurse=yes
--tag-relative=yes
--exclude=.git,.svn

# PHP
--langmap=php:.engine.inc.module.theme.install.php --PHP-kinds=+cf-v
--php-kinds=cdfi

# Markdown
--langdef=markdown
--langmap=markdown:.mkd
--regex-markdown=/^#[ \t]+(.*)/\1/h,Heading_L1/
--regex-markdown=/^##[ \t]+(.*)/\1/i,Heading_L2/
--regex-markdown=/^###[ \t]+(.*)/\1/k,Heading_L3/

# Usage: layout pyenv_virtualenv {python version} {venv name}
#
# Activates a pyenv virtualenv.
layout_pyenv_virtualenv() {
  local pyversion=$1
  local pvenv=$2
  if [ ! -e ${PYENV_ROOT}/versions/${pvenv} ]; then
    pyenv virtualenv --force --quiet ${pyversion} ${pyversion}/envs/${pvenv}
  fi
  export PYENV_VERSION=${pvenv}
}

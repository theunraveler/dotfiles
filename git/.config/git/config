[alias]
  br = branch
  ci = commit
  cl = clone
  co = checkout
  ctags = !$(git root).git/hooks/ctags
  s = show
  st = status -sb
  sync-branches = fetch -p

  # Logging
  l  = log --oneline --decorate
  lg = log -p
  tree = log --graph --decorate --pretty=oneline --abbrev-commit
  latest = for-each-ref --sort=-committerdate refs/heads/
  lm = "!sh -c \"if [[ $# -ne 2 ]]; then echo \\\"Usage: git lm <method> <file>\\\"; exit 1; fi; git log -L :$1:$2\""

  # Easily create "checkin" commits.
  checkin = commit -m 'checkin'

  # Generate patch files suitable for sharing and applying with `patch -p1`.
  patch = !git --no-pager diff --no-color

  # Stash, pull, then unstash.
  spp = !git stash && git pull && git stash pop

  # A better git pull. See http://stackoverflow.com/a/15316602.
  up = "!git remote update -p; git merge --ff-only @{u}"

[branch]
  autosetuprebase = always

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  commit = yellow bold
  frag = magenta bold
  func = 146 bold
  meta = 11
  new = green bold
  old = red bold
  whitespace = red reverse

[color "diff-highlight"]
  newHighlight = green bold 22
  newNormal = green bold
  oldHighlight = red bold 52
  oldNormal = red bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[commit]
  gpgsign = true

[core]
  editor = mvim -f
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[delta]
  line-numbers = true
  navigate = true
  syntax-theme = Sublime Snazzy

[diff]
  compactionHeuristic = true

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[gpg]
  format = ssh

[gpg "ssh"]
  allowedSignersFile = ~/.config/git/allowed_signers

[help]
  autocorrect = prompt

[include]
  path = ~/.config/git/config.local

[init]
  defaultBranch = main
  templatedir = ~/.config/git/template

[interactive]
  diffFilter = delta --color-only

[log]
  date = local

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[pull]
  rebase = true

[push]
  default = matching

[secrets]
  providers = git secrets --aws-provider
  patterns = [A-Z0-9]{20}
  patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
  patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?
  allowed = AKIAIOSFODNN7EXAMPLE
  allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

[tag]
  gpgsign = true
  sort = version:refname
